{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "properties": {
        "groups": {
            "description": "The array contains many `group`s of website",
            "items": {
                "properties": {
                    "groupName": {
                        "description": "The name of the group",
                        "type": "string"
                    },
                    "sites": {
                        "items": {
                            "properties": {
                                "description": {
                                    "type": "string"
                                },
                                "name": {
                                    "type": "string"
                                },
                                "url": {
                                    "type": "string"
                                },
                                "uuid": {
                                    "description": "The UUID of a site, you can generate one in www.uuidgenerator.net online. We recommend UUID version 4",
                                    "type": "string"
                                }
                            },
                            "type": "object"
                        },
                        "type": "array"
                    }
                },
                "type": "object"
            },
            "type": "array"
        },
        "title": {
            "description": "The title of the hub.",
            "type": "string"
        }
    },
    "type": "object"
}

